<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#4b67b4</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="android:fontFamily">@font/apple_sd_gothic_neo_r</item>
    </style>

    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/apple_sd_gothic_neo_h</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>